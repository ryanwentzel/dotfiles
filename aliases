# Shortcuts
alias cls="clear"
alias ll="ls -l"
alias lla="ls -la"
alias lss="ls -1"
alias reload!=". ~/.zshrc"

# Shortcuts
alias dev="cd ~/dev"
alias dl="cd ~/Downloads"
alias dotfiles="cd '$DOTFILES'"
alias dt="cd ~/Desktop"
alias staging="cd ~/dev/staging"

# Apps
alias affinity="open -a Affinity\ Photo"
alias ap="open ${1} -a Affinity\ Photo"
alias byword="open -a Byword"
alias chrome="open -a Google\ Chrome"
alias edge="open -a Microsoft\ Edge"
alias firefox="/Applications/Firefox.app/Contents/MacOS/firefox"
alias iawriter="open -a \"IA Writer\""
alias imageoptim="open -a ImageOptim $@"
alias logos="open -a Logos"
alias macdown="open -a MacDown"
alias music="open -a Music"
alias publisher="open -a Affinity\ Publisher"
alias safari="open -a Safari"
alias spark="open -a Spark\ Desktop"

# File actions
alias imgopt="/Applications/ImageOptim.app/Contents/MacOS/ImageOptim ${1}"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

